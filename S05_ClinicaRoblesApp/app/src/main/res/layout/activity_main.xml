<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

        <View
            android:id="@+id/circleBackgroundLeft"
            android:layout_width="1000dp"
            android:layout_height="1000dp"
            android:layout_gravity="bottom|center_horizontal"
            android:translationX="200dp"
            android:translationY="400dp"
            android:background="@drawable/circle_bg_left"/>

        <View
            android:id="@+id/circleBackgroundBottom"
            android:layout_width="500dp"
            android:layout_height="400dp"
            android:layout_gravity="bottom|center_horizontal"
            android:translationY="100dp"
            android:background="@drawable/circle_bg_bottom"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <ImageView
                android:id="@+id/doctorImage"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:src="@drawable/doctor_animado"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido a la ClÃ­nica Robles"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/comfortaa_latin_700_normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tu salud en manos confiables"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/comfortaa_latin_300_normal"/>

                <Button
                    android:id="@+id/btnEspecialidades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Especialidades"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/egyptian_blue"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:fontFamily="@font/comfortaa_latin_300_normal"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
