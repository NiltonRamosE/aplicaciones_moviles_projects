<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/tea_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgDoctor"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/doctor_animado"
            android:contentDescription="Foto del doctor"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_container_doc"
            android:padding="4dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombreDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dra. María López"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/comfortaa_latin_700_normal"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtEspecialidadDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textSize="14sp"
                android:textColor="#444"
                android:fontFamily="@font/comfortaa_latin_300_normal"/>

            <TextView
                android:id="@+id/txtHorarioDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lun-Vie · 8:00 - 13:00"
                android:textSize="13sp"
                android:textColor="#555"
                android:fontFamily="@font/comfortaa_latin_300_normal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <!-- Estrellas estáticas -->
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star" />
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star" />
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star" />
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star" />
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_star_half" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" · 10 años"
                    android:textSize="13sp"
                    android:textColor="#555"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/comfortaa_latin_300_normal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
