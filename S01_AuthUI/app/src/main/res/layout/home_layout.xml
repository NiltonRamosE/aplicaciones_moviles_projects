<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfa">

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_egyptian_blue"
        android:layout_gravity="top|start"
        android:translationX="-130dp"
        android:translationY="-120dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_aerospace_orange"
        android:layout_gravity="top|start"
        android:translationX="20dp"
        android:translationY="-205dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_chili_red"
        android:layout_gravity="bottom|end"
        android:translationX="200dp"
        android:translationY="100dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_indigo_dye"
        android:layout_gravity="bottom|end"
        android:translationX="0dp"
        android:translationY="205dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_title"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/message_welcome_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout_btn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/logout_title"
            android:layout_marginStart="-145dp"
            android:textColor="#ff520e"
            android:textAllCaps="false"
            android:background="@drawable/button_container_register"/>

    </LinearLayout>
</FrameLayout>
