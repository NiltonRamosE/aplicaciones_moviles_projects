<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Burbujas decorativas -->
    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_egyptian_blue"
        android:layout_gravity="top|start"
        android:translationX="-130dp"
        android:translationY="-120dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_egyptian_blue"
        android:layout_gravity="top|start"
        android:translationX="20dp"
        android:translationY="-205dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_indigo_dye"
        android:layout_gravity="bottom|end"
        android:translationX="200dp"
        android:translationY="100dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_indigo_dye"
        android:layout_gravity="bottom|end"
        android:translationX="0dp"
        android:translationY="205dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Iniciar Sesión"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/input_top"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:paddingLeft="32dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:translationX="-30dp"
            android:drawableStart="@drawable/account_icon"
            android:drawablePadding="25dp"/>

        <EditText
            android:hint="Contraseña"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/input_bottom"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingLeft="32dp"
            android:translationX="-30dp"
            android:drawableStart="@drawable/security_icon"
            android:drawablePadding="25dp"/>

    </LinearLayout>
</FrameLayout>
