<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_egyptian_blue"
        android:layout_gravity="top|start"
        android:translationX="-130dp"
        android:translationY="-120dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_egyptian_blue"
        android:layout_gravity="top|start"
        android:translationX="20dp"
        android:translationY="-205dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_indigo_dye"
        android:layout_gravity="bottom|end"
        android:translationX="200dp"
        android:translationY="100dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bubble_indigo_dye"
        android:layout_gravity="bottom|end"
        android:translationX="0dp"
        android:translationY="205dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/email_et"
            android:hint="@string/input_email"
            android:layout_width="375dp"
            android:layout_height="60dp"
            android:background="@drawable/input_email"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingStart="32dp"
            android:paddingEnd="16dp"
            android:layout_marginStart="-18dp"
            android:drawableStart="@drawable/account_icon"
            android:drawablePadding="25dp"/>

        <EditText
            android:id="@+id/password_et"
            android:hint="@string/input_password"
            android:layout_width="375dp"
            android:layout_height="60dp"
            android:background="@drawable/input_password"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingStart="32dp"
            android:paddingEnd="16dp"
            android:layout_marginStart="-18dp"
            android:drawableStart="@drawable/security_icon"
            android:drawablePadding="25dp"/>

        <ImageButton
            android:id="@+id/loginButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_login"
            android:src="@drawable/login_arrow_large"
            android:translationX="165dp"
            android:translationY="-90dp"
            android:contentDescription="@string/content_button_login"/>

        <TextView
            android:id="@+id/forgot_password_tv"
            android:text="@string/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:textColor="#666666"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:translationX="-90dp"
            android:translationY="-50dp"
            android:clickable="true"
            android:focusable="true" />


    </LinearLayout>
</FrameLayout>
